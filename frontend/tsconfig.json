{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"types": ["@types/jest", "jest", "@testing-library/jest-dom"],
		"typeRoots": ["./src/types", "./vendor/types"],
		"incremental": true,
		"baseUrl": "./src"
	},
	"include": [
		"next.config.js",
		"next-env.d.ts",
		"src/**/*.ts",
		"src/**/*.tsx",
		"jest.config.js",
		"jest.setup.js"
	],
	"exclude": ["node_modules", "src/cypress/integration/*"]
}
